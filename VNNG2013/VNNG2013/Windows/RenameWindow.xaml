<Window x:Class="VNNG2013.Windows.RenameWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="RenameWindow" Height="100" Width="200" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
	<StackPanel>
		<TextBlock Text="Введите новое имя:" />
		<TextBox x:Name="NewNameTextBox" />
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="OK" Width="65" Click="OKButton_Click" />
			<Button Content="Отмена" Width="65" IsCancel="True" Margin="5,0,0,0" Click="CancelButton_Click" />
		</StackPanel>
	</StackPanel>
</Window>
