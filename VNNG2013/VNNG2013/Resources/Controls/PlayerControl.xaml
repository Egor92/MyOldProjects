<UserControl x:Class="VNNG2013.Resources.Controls.PlayerControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:converters="clr-namespace:ClassLibrary.Converters;assembly=ClassLibrary"
			 mc:Ignorable="d"
			 Loaded="UserControl_Loaded"
			 Canvas.Left="{Binding Path=X}"
			 Canvas.Top="{Binding Path=Y}"
			 >
	<Grid>
		<Ellipse x:Name="Round" Height="80" Width="80" StrokeThickness="6" Stroke="Black" Fill="White" />
		<TextBlock x:Name="NumberTextBlock" Text="99" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="40" />
		<TextBlock x:Name="NameTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White" FontWeight="Bold" FontSize="20" Margin="-200,0,-200,-26" Height="26" />
	</Grid>
</UserControl>
